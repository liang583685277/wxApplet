/* pages/myworkorder/lineitem/lineitem.wxss */
.body{
  width: 100%;
}
.nav{
	display: flex;
	flex-direction:row; 
	width: 92%;
	height: 70rpx;
  margin: 20rpx auto 0;
	line-height: 70rpx;
	font-size: 26rpx;
	text-align: center;
	color: #16C39A;
	background-color: white;
	z-index: 99;
}
.nav>view{
  -webkit-flex: 1; /* Safari 6.1+ */
  flex: 1;
  border: solid 1px #16C39A;
}
.seled{
  color: white;
  background-color: #16C39A;
}
.seledview{
  display: block;
  width: 92%;
  margin: 18rpx auto;
  border: solid 1px #E3E3E3;
}
.seledhide{
  display: none;
}
.item-list{
	display: flex;
	flex-direction:row;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: solid 1px #E3E3E3;
}
.item-list>text{
	box-sizing: border-box;
}
.text1{
	flex: 2;
	padding-left: 20rpx;
	box-sizing: border-box;
	font-size: 28rpx;
	color: #999999;
}
.text2{
	flex: 5;
	font-size: 30rpx;
	color: #000;
}
.item1-list{
	display: flex;
	flex-direction:row;
	/* height: 240rpx; */
	border-bottom: solid 1px #E3E3E3;
}
.item1-text1{
	flex: 2;
	display: flex;
	align-items: center;
	padding-left: 20rpx;
	box-sizing: border-box;
	font-size: 28rpx;
	color: #999999;
	border-right: solid 1px #E3E3E3;
}
.item1-text2{
	flex: 7;
	font-size: 28rpx;
	padding: 30rpx 10rpx 20rpx;
	box-sizing: border-box;
}
.item2-text2{
	flex: 7;
	font-size: 28rpx;
}
.item2-text2-view{
	padding: 30rpx 10rpx 20rpx;
	box-sizing: border-box;
}
.item1-list-view{
	display: flex;
	flex-direction:row;
	height: 60rpx;
	border: solid 1px #E3E3E3;
	font-size: 26rpx;
	color: #434343;
}
.bgcolor{
	color: #999999;
	background-color: #F2F2F2;
}
.item1-list-view>text{
	flex: 1;
	line-height: 60rpx;
	text-align: center;
	border-right: solid 1px #E3E3E3;
}
.guige{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-indent: 50rpx;
	border-bottom: solid 1px #E3E3E3;
}
.bordertop{
  border-top: solid 1px #E3E3E3;
}
.viewimg{
	width: 100%;
  padding-left:20rpx;
  box-sizing:border-box; 
}
.futu{
  line-height: 100rpx;
  font-size:28rpx;
  color:#999999;
}
.viewimg>image{
	height: auto;
}
.scjdimg{
	display: block;
	width: 90%;
	margin: 0 auto;
  padding-top:30rpx;
  box-sizing: border-box; 
}
.itemitem-list{
	position: relative;
	height: 330rpx;
	padding-left: 80rpx;
	padding-bottom: 80rpx;
	box-sizing: border-box;
	font-size: 26rpx;
}
.itemitem-list>view{
	height: 50rpx;
	line-height: 50rpx;
}
.headitem{
	font-weight: bold;
}
.icon-text{
	display: block;
	position: absolute;
	width: 50rpx;
	height: 50rpx;
	line-height: 50rpx;
	top: 0;
	left: 0;
	font-size: 46rpx;
	text-align: center;
	border-radius: 50rpx;
	border: solid #1ABC9C 2px;
}
.icon-text::after{
	content: "";
	position: absolute;
	top: 100%;
	left: 49%;
	background-color: #1ABC9C;
	width: 2px;
	height: 280rpx;
}
.statusa{
	color: #16C39A;
}
.statusb{
	color: #FF5918;
}
